rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    /**
     * care-photos:
     * - 読み取り: 公開（Google Chat経由での閲覧を許可するため）
     * - 書き込み: Cloud Functions（Admin SDK）のみ
     *
     * ※ URLを知っている人は誰でも閲覧可能
     * ※ 書き込みはCloud Functions経由でのみ許可（Admin SDKでルールをバイパス）
     */

    match /care-photos/{allPaths=**} {
      // 読み取り: 公開（Google Chatで共有した画像を閲覧可能にするため）
      allow read: if true;

      // 書き込み: Cloud Functionsのみ（Admin SDKでバイパス）
      // フロントエンドからの直接アップロードは禁止
      allow write: if false;
    }
  }
}
