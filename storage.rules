rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    /**
     * Phase 52: Firebase Authentication によるアクセス制御
     *
     * care-photos:
     * - 読み取り: 認証済みユーザーのみ
     * - 書き込み: 認証済みユーザー または Cloud Functions（Admin SDK）
     *
     * ※ Cloud FunctionsはAdmin SDKを使用するためセキュリティルールをバイパス
     */

    match /care-photos/{allPaths=**} {
      // 読み取り: 認証済みユーザーのみ
      allow read: if request.auth != null;

      // 書き込み: 認証済みユーザーのみ
      // Cloud FunctionsからのアップロードはAdmin SDKでバイパス
      allow write: if request.auth != null;
    }
  }
}
